%ul.cols-products
  - products.each do |product|
    %li
      .photo
        .product-category
          %a{:href=>"/category/#{product.category.id}"}= product.category.title
        = image_tag product.attachments.find_last.file_url(:thumb)
      .product-info
        %form{:method=>"post", :class=>"button_to", :action=>"/add_to_cart?id=#{product.id}"}
          %input{:type=>"hidden", :value=>'external_token', :name=>"authenticity_token"}
          .title
            = link_to product.title, product
          .pull-right
            .quantity
              .minus -
              %input.calc{:type=>"text", :value=>"", :name=>"quantity"}
              .plus +
            .price
              = product.price.to_i
              руб
          .dose
            = product.weight.to_i
            гр. порция
          %input.cart-add{:type=>"submit", :value=>"Заказать"}