



<%= semantic_form_for [:admin, @product], :html => {:multipart => true} do |f| %>
    <p>
      <%= f.label :title %><br/>
      <%= f.text_field :title %>
    </p>
    <p>
      <%= f.label :desc %><br/>
      <%= f.text_area :desc %>
    </p>
    <%= f.fields_for :attachments do |attachment_form| %>
        <div style="margin: 0 0 15px;">
          <%= attachment_form.label :file, "Выберите фото" %><br/>
          <%= attachment_form.file_field :file %>
        </div>
    <% end %>
    <p><%= f.submit %></p>
<% end %>