.panel
  %h3
    Заказ №
    = @order.id
    %b{:style=>"color:green"} (#{@order.confirm})

  .panel_contents
    .attributes_table
      %table
        %tr.row
          %th ФИО
          %td
            = @order.username
            = @order.surname
        %tr.row
          %th Контактный телефон
          %td= @order.phone
        %tr.row
          %th Email
          %td= @order.email
        %tr.row
          %th Адрес для доставки
          %td= @order.address
        %tr.row
          %th Желаемая дата доставки
          %td
            = @order.date
        %tr.row
          %th Желаемое время доставки
          %td
            c
            = @order.first_time
            до
            = @order.last_time

        %tr.row
          %th Комментарий к заказу
          %td= @order.comment
        %tr.row
          %th Стоимость (руб.)
          %td= @order.price.to_i
        %tr.row
          %th Форма оплаты
          %td= @order.payment
        -if @order.payment == 'Безналичный расчёт'
          %tr.row
            %th Реквизиты к выставлению счёта
            %td= @order.details

.panel{:style => "margin-top:30px"}
  %h3 Содержимое заказа
  .panel_contents
    .attributes_table
      %table{:style=>"width:auto"}
        %tr
          %td Наименование
          %td Изображение
          %td Порция
          %td Количество
          %td Цена
          %td Итого
        -for cart_item in JSON.parse(@order.data)
          %tr
            -if cart_item
              -product = Product.find(cart_item[0])
              %td= link_to product.title, [product.category, product], :target => '_blank'
              -if product.attachments.find_last
                %td= image_tag product.attachments.find_last.file_url(:mini)
              %td
                = product.weight.to_i
                гр.
              %td= cart_item[1]
              %td= product.price.to_i
              %td= product.price.to_i * cart_item[1]