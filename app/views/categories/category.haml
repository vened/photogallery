.box-container
  .breadcrumbs
    = link_to 'Главная', '/'
    &nbsp;|&nbsp;
    =link_to 'Интернет-магазин', products_path
    &nbsp;|&nbsp;
    %span= @category.title


.box-container.box-main-container
  .box-main
    %h1= @category.title

    .products-nav
      .text-del
        %h2
          %span Самое лучшее для вас
        %hr

        %ul.products-nav-list.clearfix
          -@categories.each do |category|
            -if category.products.length > 0
              %li
                = link_to category.title, category


    = render :partial => 'products/products', :object => @products

  .box-right
    .mini_cart= render_cell :cart, :mini_cart
    = render :partial => 'shared/product_right_col'