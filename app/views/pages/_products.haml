%ul.cols-products
  - @cat.each do |category|
    -if category.products.length > 0
      - @prod = Product.order("updated_at DESC").find_by_category_id(category.id)
      %li
        .photo
          .product-category
            = link_to category.title, category
          -if @prod.attachments.find_last
            = link_to([@prod.category, @prod]) do
              .decor
              = image_tag @prod.attachments.find_last.file_url(:thumb)
          -else
            = link_to([@prod.category, @prod]) do
              .decor
              %img{:src => '/images/nophoto_small.png'}
        .product-info
          %form{:method=>"post", :class=>"button_to", :action=>"/add_to_cart?id=#{@prod.id}", :data => {:remote => "true"}}
            %input{:type=>"hidden", :value=>'external_token', :name=>"authenticity_token"}
            .title
              = link_to @prod.title, [@prod.category, @prod]
            .pull-right
              .quantity
                .minus -
                %input.calc{:type=>"text", :value=>"#{@prod.category.total}", :data => {:min => "#{@prod.category.total}"}, :name=>"quantity", :autocomplete=>"off"}
                .plus +
              .price
                = @prod.price.to_i
                руб
            .dose
              = @prod.weight.to_i
              гр. порция
            -#%input.cart-add{:type=>"submit", :value=>"Заказать"}
            .cart-add Заказать