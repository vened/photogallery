!!! 5
%html(lang="ru")
  %head
    %meta(charset="utf-8")
    %title Шико Catering Club
    = csrf_meta_tags
    = stylesheet_link_tag    "application", :media => "all"
    = javascript_include_tag "application"
    %link{:href => 'http://fonts.googleapis.com/css?family=PT+Sans:400,700,400italic,700italic&subset=latin,cyrillic,latin-ext', :rel => 'stylesheet'}

  %body
    #wrap
      #wrapper
        #container
          = render 'shared/header'
          = render 'shared/menu'
          #content
            = yield
        = render 'shared/footer'