- page_path = request.original_fullpath

- if @cart.items.to_s != '{}'

  - if page_path == '/order/new'

    .box-gray{:style => 'margin-bottom: 30px'}
      .rounds-top
      .box-inner
        %h3 Товары в вашей корзине
        %hr
