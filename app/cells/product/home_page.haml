%ul.cols-products
  - @category.each do |category|
    - @product = category.products.first
    %li
      .photo
        .product-category
          = link_to category.title, category
        = image_tag @product.attachments.find_last.file_url(:thumb)
      .product-info
        %form{:method=>"post", :class=>"button_to", :action=>"/add_to_cart?id=#{@product.id}"}
          %input{:type=>"hidden", :value=>'external_token', :name=>"authenticity_token"}
          .title
            = link_to @product.title, @product
          .pull-right
            .quantity
              .minus -
              %input.calc{:type=>"text", :value=>"1", :name=>"quantity", :autocomplete=>"off"}
              .plus +
            .price
              = @product.price.to_i
              руб
          .dose
            = @product.weight.to_i
            гр. порция
          %input.cart-add{:type=>"submit", :value=>"Заказать"}